<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CounterActivity">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_indent"
        android:gravity="center"
        android:paddingTop="@dimen/small_indent"
        android:text="info"
        android:textColor="#000000"
        android:textSize="@dimen/medium_text" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/small_indent"
            android:paddingTop="@dimen/small_indent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_frame_text"
                android:backgroundTint="@color/text_frame"
                android:gravity="center"
                android:text="counter"
                android:textColor="#000000"
                android:textSize="@dimen/small_text" />


            <Button
                android:id="@+id/btn_counter_plus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_indent"
                android:text="+"
                android:textSize="@dimen/small_text" />

            <Button
                android:id="@+id/btn_counter_minus"

                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_indent"
                android:text="-"
                android:textSize="@dimen/small_text" />

            <Button
                android:id="@+id/btn_counter_0"

                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="0"
                android:textSize="@dimen/small_text" />

            <Button
                android:id="@+id/btn_counter_rnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="rnd"
                android:textSize="@dimen/small_text" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/small_indent"
            android:paddingTop="@dimen/small_indent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/style_frame_text"
                android:backgroundTint="@color/text_frame"
                android:text="color"
                android:textColor="#000000"
                android:textSize="@dimen/small_text" />


            <Button
                android:id="@+id/btn_color_r"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_indent"
                android:onClick="colorText"
                android:text="r"
                android:textSize="@dimen/small_text" />

            <Button
                android:id="@+id/btn_color_g"

                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_indent"
                android:onClick="colorText"
                android:text="g"
                android:textSize="@dimen/small_text" />

            <Button
                android:id="@+id/btn_color_b"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_indent"
                android:onClick="colorText"
                android:text="b"
                android:textSize="@dimen/small_text" />

            <Button
                android:id="@+id/btn_color_m"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_indent"
                android:onClick="colorText"
                android:text="m"
                android:textSize="@dimen/small_text" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_indent"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_indent"
                android:background="@drawable/style_frame_text"
                android:backgroundTint="@color/text_frame"
                android:gravity="center"
                android:text="background"
                android:textColor="#000000"
                android:textSize="@dimen/small_text" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_indent"
                android:onClick="colorBg"
                android:text="1"
                android:textSize="@dimen/small_text" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_indent"
                android:onClick="colorBg"
                android:text="2"
                android:textSize="@dimen/small_text" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_indent"
                android:onClick="colorBg"
                android:text="3"
                android:textSize="@dimen/small_text" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_indent"
                android:onClick="colorBg"
                android:text="4"
                android:textSize="@dimen/small_text" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/medium_text">

        <Button
            android:id="@+id/button_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_edit" />
    </LinearLayout>
</LinearLayout>